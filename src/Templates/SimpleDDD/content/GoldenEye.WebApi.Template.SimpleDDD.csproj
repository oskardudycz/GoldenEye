<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Version>1.0.1</Version>
    <PackageId>GoldenEye.WebApi.Template.SimpleDDD</PackageId>
    <RootNamespace>GoldenEye.WebApi.Template.SimpleDDD</RootNamespace>
    <AssemblyName>GoldenEye.WebApi.Template.SimpleDDD</AssemblyName>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="6.2.2" />
    <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="3.2.0" />
    <PackageReference Include="GoldenEye.Backend.Core" Version="5.1.0" />
    <PackageReference Include="GoldenEye.Backend.Core.DDD" Version="6.0.1" />
    <PackageReference Include="GoldenEye.Backend.Core.Marten" Version="5.1.1" />
    <PackageReference Include="GoldenEye.Backend.Core.WebApi" Version="5.0.1" />
    <PackageReference Include="GoldenEye.Shared.Core" Version="4.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.7" />
    <PackageReference Include="NuGet.CommandLine" Version="4.6.2" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>